<?php
header('Content-type: application/json');
$oldtree = null;
$time = time();
$i = 0;
while((time() - $time) < 29)
{
      $tree = file_get_contents("status.txt");

      if ($tree !== $oldtree  )
      {
        $i+=1;
        print $tree;
        ob_flush();
        flush();
      }
     $data = json_decode($tree);
     if ($data->status == "ready")
        {
        break;
        } else if ($data->status == "error")
        {
        break;
        }
     $oldtree = $tree;
     usleep(1000);

}

?>
